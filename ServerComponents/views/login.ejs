<html>
<head>

<!-- Dirty hack to avoid FB appending #_=_ when redirecting url -->
<script type="text/javascript">
	if (window.location.hash == '#_=_')
		window.location.hash = '';
</script>
<script src="http://code.jquery.com/jquery-1.7.1.min.js"></script>

</head>
<body>

	<div data-role="page" id="page1">
		<div data-role="content">
			<h1>GeoQuest Login</h1>
			<form action="/login" method="POST">
				<div data-role="fieldcontain">
					<fieldset data-role="controlgroup">
						<label for="textinput1"> Username </label> <input name="username"
							id="textinput1" placeholder="" value="" type="text">
					</fieldset>
				</div>
				<div data-role="fieldcontain">
					<fieldset data-role="controlgroup">
						<label for="textinput2"> Password </label> <input name="password"
							id="textinput2" placeholder="" value="" type="password">
					</fieldset>
				</div>
				<input data-inline="true" value="Login" type="submit">
			</form>
			Not a user yet? <a href='/signup/geoquestUser/'> Sign Up to
				GeoQuest now!</a>
		</div>

		<hr />
		<div data-role="content">
			<h3>
				Or Login via &nbsp <a href='/auth/google' rel='external'> <img
					alt="Google Login" src="/images/GoogleLogo.png" />
				</a>&nbsp <a href='/auth/facebook' rel='external'> <img
					alt="Facebook Login" src="/images/FacebookLogo.png" />
				</a>
			</h3>
		</div>
	</div>
</body>

</html>
